# Database Configuration
# These are already set in docker-compose.yml, but you can override them
# SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/hh_assistant
# SPRING_DATASOURCE_USERNAME=hh_user
# SPRING_DATASOURCE_PASSWORD=hh_pass

# Ollama Configuration
# URL для доступа к Ollama (локально запущенной)
# На Windows/Mac используйте host.docker.internal
# На Linux может потребоваться другой подход
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2.5:7b

# HH.ru API Configuration
# Получите токен по инструкции: docs/HH_TOKEN_GUIDE.md
HH_ACCESS_TOKEN=APPLL6FBDJ54NM63R646FN17SUGA8AF9O787HV3R2J9ER8KFPI8C7PNA4NOMPGFS
HH_TOKEN_TYPE=user
# Опционально: формат "AppName/Version (contact@email.com)"
# HH_USER_AGENT=HH-Assistant/1.0 (3x3engine@gmail.com)

# Telegram Bot Configuration
# Создайте бота через @BotFather в Telegram
# Rate limit: telegram.rate-limit.requests-per-second (default 10)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=true
TELEGRAM_AUTHORIZATION_ENABLED=true
# Разрешенные пользователи (user ID через запятую)
TELEGRAM_ALLOWED_USER_IDS=1126891709
# Или username через запятую (с @)
# TELEGRAM_ALLOWED_USERNAMES=@username1,@username2

# Application Configuration
# Base URL для API endpoints (для кнопок в Telegram)
APP_API_BASE_URL=http://localhost:8080
# app.search.rotation-strategy: all (default) | rotation
# APP_SEARCH_ROTATION_STRATEGY=all

# Proxy Configuration (опционально)
# PROXY_ENABLED=false
# PROXY_HOST=
# PROXY_PORT=
# PROXY_TYPE=HTTP





